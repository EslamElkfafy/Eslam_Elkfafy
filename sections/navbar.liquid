<link rel="stylesheet" href="{{ 'navbar.css' | asset_url }}">

<header class="navbar-header">
  <div class="navbar-container">
    <!-- Logo -->
    <div class="navbar-logo">
      <a href="{{ routes.root_url }}">
        {% if shop.brand.logo %}
          <img src="{{ shop.brand.logo | img_url: width:151.444 }}" alt="{{ shop.brand.name }}">
        {% else %}
          <span>{{ shop.brand.name }}</span>
        {% endif %}
      </a>
    </div>

    <!-- Center message - hidden on mobile -->
    <div class="navbar-message">
      {% if settings.navbar_message %}
        {{ settings.navbar_message | escape }}
      {% else %}
        Find the ideal gift for your loved ones.
      {% endif %}
    </div>

    <!-- CTA Button -->
    <button class="navbar-button">
      <span class="button-text-desktop">CHOOSE GIFT</span>
      <span class="button-text-mobile">GIFT</span>
      <svg class="arrow-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
      </svg>
    </button>
    {% comment %} buger icon {% endcomment %}
    {% comment %}
      <div class="navbar-icon">
        <img src="{{ 'burger-icon.svg' | asset_url }}" width="18" height="10" alt="buger icon">
      </div>
    {% endcomment %}
  </div>
</header>
{%  schema  %} 
{
  "name": "settings",
  "settings": [
    {
      "type": "text",
      "id": "navbar_message",
      "label": "Navbar message"
    },
    {
      "type": "text",
      "id": "cta_button_text",
      "label": "CTA button text"
    },
    {
      "type": "text",
      "id": "cta_button_mobile",
      "label": "CTA button text (mobile)"
    }
  ],
  "presets": [
    {
      "name": "Nav Bar",
      "category": "General"
    }
  ]
}

 {% endschema %}